<div class="mt-4 mx-5 mb-5">
<h2>List of Users</h2>
<div class="col-12">
<table class="table table-striped">
	<thead>
		<tr>
			<th>Username</th>
			<th>Email</th>
      <th>Created at</th>
      <th>Last Modified</th>
      <th>User Activated</th>
      <th>Password reset sent</th>
      <th colspan="3">Modify User</th>
		</tr>
	</thead>
		<tbody>
			<% @users.each do |user| %>
				<tr>
					<td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= user.created_at %></td>
          <td><%= user.updated_at %></td>
					<td><%= user.activated.humanize %></td>
          <td><%= user.reset_sent_at %></td>
					<td><%= link_to 'Details', user_path(user), class: "btn btn-info btn-sm"%></td>
					<td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-primary btn-sm"%></td>
          <td><%= link_to "Delete", user_path(user),class: "btn btn-warning btn-sm", data: {turbo_confirm: "Are you sure?", turbo_method: :delete } %></td>
				</tr>
			<% end %>
		</tbody>
</table>
<%= link_to 'Add a new user', new_user_path, :class => "btn btn-primary mb-5" %>

</div>
</div>