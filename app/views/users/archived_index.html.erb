<div class="container">
  <div class="row text-center justify-content-center">
    <div class="col col-sm-12 col-md-12">
      <div class="row justify-content-center">
				<div class="col-12 col-md-6">
					<h4>List of Users</h4>
					<p class="text-muted">This user list is exclusively archived users that do not show up on the rest of the site</p>
				</div>
				
					
				</div>

			</div>	
			<div class="row">
				<div class="col">
					<div class="table-responsive">
						<table class="table table-striped">
							<thead>
								<tr>
									<th>Username</th>
									<th>Email</th>
									<th colspan="3">Edit User</th>
								</tr>
							</thead>
							<tbody>
								<% @archived_users.each do |archived_user| %>
									<tr>
										<td><small><%= archived_user.username %></small></td>
										<td><small><%= archived_user.email %></small></td>
										<td><small><%= link_to 'Unarchive', edit_user_path(archived_user, :status => 'active'), class: "btn btn-primary btn-sm"%></small></td>
										
											 
									</tr>
								<% end %>
							</tbody>
						</table>
					</div>
				</div>	
			</div>		
		</div>
	</div>	
</div>
