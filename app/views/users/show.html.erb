<div class="mt-2 mx-2 mb-5">
<h4>List of Users</h4>
<div class="table-responsive">
<table class="table table-striped w-75">
	<thead>
		<tr>
			<th>Username</th>
			<th>Email</th>
      <th>Created</th>
      <th>Modified</th>
      <th>Activated</th>
      <th>Password reset sent</th>
      <th colspan="3">Modify User</th>
		</tr>
	</thead>
		<tbody>
				<tr>
					<td><%= @user.username %></td>
          <td><%= @user.email %></td>
          <td><%= @user.created_at.strftime("%m/%d/%y") %></td>
          <td><%= @user.updated_at.strftime("%m/%d/%y") %></td>
					<td><%= @user.activated.humanize %></td>
          <td><%= @user.reset_sent_at %></td>
					<td><%= link_to 'Edit', edit_user_path(@user), class: "btn btn-primary btn-sm"%></td>
          <!-- <td><%= link_to "Delete", user_path(@user),class: "btn btn-warning btn-sm", data: {turbo_confirm: "Are you sure?", turbo_method: :delete } %></td>-->
				</tr>
		</tbody>
</table>
</div>
<%= link_to 'Go back to users list', users_path, :class => "btn btn-primary btn-sm mb-5" %>
</div>