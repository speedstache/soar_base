<%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
  <div class="form-group row m-3">
      <%= f.label :username, class: "col-3 col-form-label" %>
    <div class="col">
      <%= f.text_field :username, class: "input-group-text form-control" %>
    </div>
  </div>
  <div class="form-group row m-3">
      <%= f.label :email, class: "col-3 col-form-label" %>
    <div class="col">
      <%= f.text_field :email, class: "input-group-text form-control" %>
    </div>
  </div>	
  <div class="form-group row m-3" >
      <%= f.label :password, class: "col-3 col-form-label" %>
    <div class="col">
      <%= f.password_field :password, class: "input-group-text form-control" %>
    </div>
  </div>
  <div class="form-group row m-3" >
      <%= f.label :password_confirmation, class: "col-3 col-form-label" %>
    <div class="col">
      <%= f.password_field :password_confirmation, class: "input-group-text form-control" %>
    </div>
  </div>
    <%= link_to "Close", users_path,  class: "btn btn-light" %> 
    <%= f.submit class:"btn btn-primary" %>
<% end %>