<table class="table table-striped">
	<thead>
		<tr>
			<th >Aircraft</th>
			<% @avail_hours.each do |hour| %>
				<th><%= hour.hour %></th>
				<% end %>
		</tr>
	</thead>
	<tbody>
		<tr>
		<td>ASK-21A</td>
		<% @avail_hours.each do |hour| %>
			<td ><% if @view_21a.where(reservation_time: hour.hour).exists? %>
