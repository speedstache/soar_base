<div class="container">
  <div class="row text-center justify-content-center">
		<div class="col col-sm-12 col-md-6">
			<div class="row">
				<div class="col">
          <h4>Add a new reservation</h4>
          <p class="text-muted">Aircraft are limited to those the current user has flight privileges in</p>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= render 'shared/errors', obj: @reservation %>
          <% if @date.blank? || @time.blank? || @aircraft.blank? %>
            <%= render 'form' %>
          <% else %>  
            <%= render 'form_with_params' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>    
</div> 

