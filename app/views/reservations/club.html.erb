<div class="container mt-2 mb-5 pb-5">
	<%= render 'grid' %> 
<div class="row text-center">
	<div class="col justify-content-start">
		<h4>Reservation list for: <%= @res_show.strftime("%a, %b %d, %Y") %></h4>
	</div>
	<div class="row justify-content-center">
		<div class="col-sm-10 col-md-8 table-responsive">		
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Profile&nbsp;</th>
						<th>Name  </th>
						<th>Date  </th>
						<th>Time  </th>
						<th>Aircraft </th>
						<th>Instructor?</th>
					</tr>
				</thead>
					<tbody>
						<% @res_date.each do |reservation| %>
							<tr>
								<td class="align-middle"><%= gravatar_for reservation.user, size: 50 %></td>
								<td class="align-middle"><%= reservation.user.username %></td>
								<td class="align-middle"><%= reservation.reservation_date.strftime("%m/%d/%y") %>  </td>
								<td class="align-middle"><%= reservation.reservation_time %></td>
								<td class="align-middle"><%= reservation.aircraft.short_name %>  </td>
								<td class="align-middle"><%= reservation.instructor_flag.humanize %>  </td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>		
	</div>
</div>
		