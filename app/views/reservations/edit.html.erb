<div class="container mx-2 my-2">
<h4>Edit a reservation</h4>
	<div class="row justify-content-start ml-5 w-50" >
    <div class="col">
      <%= render 'shared/errors', obj: @reservation %>
      <%= form_for [@reservation], html: {class: "shadow p-3 mb-3 bg-info rounded", data: { turbo: false }, local: true}  do |f| %>
            <%= f.hidden_field :user_id, value: current_user.id %>
          <div class="form-group row p-2" >
            <%= f.label :date, class: "col col-form-label text-light" %>
            <div class="col">
              <%= f.select :reservation_date, options_from_collection_for_select(@avail_days, 'day', 'day', @reservation.reservation_date), {}, {class: "input-group-text"} %>
            </div>
          </div>	
          <div class="form-group row p-2">
            <%= f.label :start_time, class: "col col-form-label text-light" %>
            <div class="col"> 
            <%= f.select :reservation_time, options_from_collection_for_select(@avail_hours, 'hour', 'hour', @reservation.reservation_time), {}, {class: "input-group-text"} %>
              
            </div>
          </div>
            <%= f.hidden_field :reservation_duration %>
          <div class="form-group row p-2" >
            <%= f.label :aircraft, class: "col col-form-label text-light" %>
            <div class="col"> 
              <%= f.select :aircraft_id, options_from_collection_for_select(Aircraft.where(group: 'club'), :id, :short_name, @reservation.aircraft_id), {}, {class: "input-group-text"} %> 
            </div>
          </div>
          <div class="form-group row p-2" >
            <%= f.label :instructor_flag, class: "col col-form-label text-light" %>
            <div class="col">
              <%= f.check_box :instructor_flag, class: "form-check-label" %>
            </div>
          </div>
        <%= f.submit class:"btn btn-outline-light col" %>
      <% end %>
    </div>
  </div>
</div>