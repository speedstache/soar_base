<div class="container ">
	<div class="row text-center justify-content-center" >
    <div class="col-sm-10 col-md-6">
      <div class="card shadow p-3 mb-5 bg-white rounded">
        <div class="card-header fst-italic">
          <div class="row">
            <div class="col input-group text-start justify-content-start">
              <h5>Assign Reservation privileges for <%= User.find(@id).username %></h5>
            </div>
          </div>  
        </div>
        <div class="card-body" style="padding: 20px 20px">
          <h6>User has privileges in: </h6>
          <div class="row pb-2">
            <% AircraftUser.where(user_id: @id).each do |aircraftuser| %>
            <div class="col p-1">
              <%= button_to name=Aircraft.find(aircraftuser.aircraft_id).short_name , aircraftuser, method: :delete, :class => "btn btn-warning btn-sm" %>
            </div>
              <% end %> 
              <p class="text-muted">Click an aircraft name to delete reservation privileges</p>
          </div>
          <div class="row">
            <div class="col text-start justify-content-start">
            <%= render 'shared/errors', obj: @aircraft_user %>
      
            <%= render 'form' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
