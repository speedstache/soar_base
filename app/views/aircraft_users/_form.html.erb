<%= form_with(model: @aircraft_user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
  <div class="form-group row p-2" >
      <%= f.label :user_id, class: "col-4 col-form-label text-light" %>
    <div class="col-3">
      <%= f.collection_select(:user_id, User.all, 'id', 'username', {}, {class: "input-group-text"}) %>
    </div>
  </div>
  <div class="form-group row p-2" >
      <%= f.label :aircraft, class: "col-4 col-form-label text-light" %>
    <div class="col-5">
    <%= f.collection_select(:aircraft_id, Aircraft.all, :id, :short_name, {:include_hidden => false}, {multiple: false, size: 4, class: "form-select shadow rounded"}) %>
    </div>
  </div>
    
<%= f.submit class:"btn btn-outline-light btn-lg col-6" %>
<% end %>