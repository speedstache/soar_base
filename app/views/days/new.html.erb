<div class="container">
<h4>Add a Day to the schedule</h4>
	<div class="row justify-content-start ml-5" >
    <div class="col-5">
      <%= render 'shared/errors', obj: @day %>
        <%= form_with scope: :day, url: days_path, class: "shadow p-3 mb-3 bg-info rounded", data: { turbo: false }, local: true do |f| %>
          <div class="form-group row p-2" >
            <%= f.label :date, class: "col-4 col-form-label text-light" %>
            <div class="col-5">
              <%= f.date_field :day, class: "input-group-text" %>
            </div>
          </div>	
          <div>
          <div class="form-group row p-2" >
            <%= f.label :activeflag, class: "col-4 col-form-label text-light" %>
            <div class="col-5">
              <%= f.check_box :active_flag, class: "form-check-label" %>
            </div>
          </div>
        <%= f.submit class:"btn btn-outline-light btn-sm col-6" %>
      <% end %>
    </div>
  </div>
</div>