<div class="container">
	<div class="row text-center justify-content-center" >
    <h4>Add a Day to the schedule</h4>
    <div class="col col-sm-10 col-md-6">
      <%= render 'shared/errors', obj: @day %>
      <%= form_with scope: :day, url: days_path, class: "shadow p-3 mb-3 bg-info rounded", data: { turbo: false }, local: true do |f| %>
        <div class="row m-3">
          <div class="form-group col" >
            <%= f.label :date, class: "col col-form-label" %>
          </div>
          <div class="col">
            <%= f.date_field :day, class: "input-group-text form-control" %>
          </div>
        </div>
        <div class="row m-3">  
          <div class="form-group col" >
            <%= f.label :activeflag, class: "col col-form-label" %>
          </div>
          <div class="col">
            <%= f.check_box :active_flag, class: "form-check-label" %>
          </div>
        </div>
        <%= link_to 'Close', days_path, :class => "btn btn-secondary" %>
        <%= f.submit class:"btn btn-primary" %>
      <% end %>
    </div>
  </div>  
</div>