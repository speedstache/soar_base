<h1>Editing A specific day</h1>
<div class="container">
	<div class="row justify-content-start ml-5 my-5" >
    <div class="col-5">
      <%= render 'shared/errors', obj: @day %>
        <%= form_with(model: @day, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
          <div class="form-group row p-2" >
              <%= f.label :day, class: "col-2 col-form-label text-light" %>
            <div class="col-5">
              <%= f.text_field :day, class: "input-group-text" %>
            </div>
          </div>	
          <div class="form-group row p-2" >
              <%= f.label :active_flag, class: "col-1 col-form-label text-light" %>
            <div class="col-5">
              <%= f.check_box :active_flag %>
            </div>
          </div>
        <%= f.submit class:"btn btn-outline-light btn-lg col-6" %>
      <% end %>
    </div>
  </div>
</div>
<div>
  <%= link_to "Back to days", days_path %>
</div>
