<h1 class="text-center mt-4 mb-4">Log in</h1>

<div class="container">
	<div class="row justify-content-center" >
		<div class="col-10">
			<%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>

			<div class="form-group row p-2" >
				<%= f.label :email, class: "col-2 col-form-label text-light" %><br/>
				<div class="col-10">	
					<%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
				</div>
			</div>

      <div class="form-group row p-2" >
				<%= f.label :password, class: "col-2 col-form-label text-light" %><br/>
				<div class="col-10">	
					<%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
				</div>
			</div>

			<div class="form-group row p-2 justify-content-center" >
				<%= f.submit "Log In", class:"btn btn-outline-light btn-lg col-2" %>
			</div>
			<% end %>	
		</div>
		<div class="text-center my-3">
		</div
	</div>
</div>