<div class="container">
	<div class="row text-center justify-content-center" >
  <h4>Edit reservation number: <%= @reservation.id %></h4>
    <div class="col col-sm-10 col-md-6">
      <%= render 'shared/errors', obj: @reservation %>
        <%= form_for @reservation, html: {class: "shadow p-3 mb-3 bg-info rounded", local: true } do |f| %>
          <%= hidden_field_tag :previous_request, request.referer %>

          <%= f.hidden_field :status, value: 'paid' %>

          <div class="form-group row m-3" >
            <div class="col">
              <%= f.label :New_status, class: "col col-form-label" %>
              </div>
            <div class="col form-control">
              'Paid'
            </div>
          </div>	
          <div class="form-group row m-3" >
          <div class="col">
              <%= f.label :method, class: "col col-form-label" %>
              </div>
            <div class="col form-control">
              <%= @reservation.method %>
            </div>
          </div>
          <div class="form-group row m-3" >
          <div class="col">
              <%= f.label :description, class: "col col-form-label" %>
              </div>
            <div class="col">
            <%= f.text_field :description, class: "input-group-text form-control" %>
            </div>
          </div>
          <%= link_to "Close", admin_reservations_path, class:"btn btn-secondary" %>
          <%= f.submit class:"btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
