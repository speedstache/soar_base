<%= form_with(model: @towfee, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
  <div class="form-group row p-2" >
      <%= f.label :min_height, class: "col col-form-label text-light" %>
    <div class="col">
      <%= f.number_field :min_height, class: "input-group-text" %>
    </div>
  </div>
  <div class="form-group row p-2" >
      <%= f.label :max_height, class: "col col-form-label text-light" %>
    <div class="col">
      <%= f.number_field :max_height, class: "input-group-text" %>
    </div>
  </div>	
  <div class="form-group row p-2" >
      <%= f.label :price_per, class: "col col-form-label text-light" %>
    <div class="col">
      <%= f.number_field :price_per, step: 0.1, class: "input-group-text" %>
    </div>
    </div>
    
<%= f.submit class:"btn btn-outline-light col" %>
<% end %>