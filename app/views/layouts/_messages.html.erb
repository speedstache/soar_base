<div class="container">
  <% flash.each do |name, msg| %>
    <div class="alert alert-<%= name == "notice" ? "success" : "danger" %> alert-dismissible fade show mt-2" role="alert">
        <%= msg %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
</div>
<script type="text/javascript">
  setTimeout(function(){
    $('.alert').fadeOut('slow');
   }, 4000);
</script>
