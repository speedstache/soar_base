<h4 class="text-center mt-4 mb-4">Forgot Password</h4>

<div class="container">
	<div class="row justify-content-center" >
		<div class="col">
			<%= form_for(:password_reset, url: password_resets_path, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>

			<div class="form-group row p-2" >
				<%= f.label :email, class: "col col-form-label text-light" %><br/>
				<div class="col">	
					<%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
				</div>
			</div>

			<div class="form-group row p-2 justify-content-center" >
				<%= f.submit "Submit", class:"btn btn-outline-light btn-lg col" %>
			</div>
			<% end %>	
		</div>
		<div class="text-center my-3">
		</div
	</div>
</div>