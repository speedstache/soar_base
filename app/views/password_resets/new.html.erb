<div class="container mx-2 my-2">
	<div class="row text-center justify-content-center" >
  	<h4 class="text-center mt-4 mb-4">Forgot Password</h4>
    <div class="col-sm-10 col-md-6">
			<%= form_for(:password_reset, url: password_resets_path, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>

			<div class="form-group row p-2" >
				<%= f.label :email, class: "col col-form-label" %><br/>
				<div class="col">	
					<%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
				</div>
			</div>
				<%= f.submit "Submit", class:"btn btn-primary" %>
			<% end %>	
		</div>
	</div>
</div>		
