<div class="container">
  <div class="row text-center justify-content-center">
    <div class="col col-sm-12 col-md-10">
      <div class="row justify-content-center">
				<div class="col m-2">
					<h4>List of membership types</h4>
				</div>
				<div class="col m-2">
					<%= link_to 'Add new membership type', new_membership_path, class: "btn btn-primary btn-sm"%>
				</div>
				<div class="table-responsive">
					<table class="table table-striped">
						<thead>
							<tr>
								<th>Membership Type</th>
								<th>Renewal Period</th>
								<th>Renewal Price</th>
								<th>Active Flag</th>
								<th colspan="2">Modify</th>
							</tr>
						</thead>
							<tbody>
								<% @memberships.each do |membership| %>
									<tr>
										<td><%= membership.membership_type %></td>
										<td><%= membership.renewal_period %></td>
										<td><%= membership.renewal_price %></td>
										<td><%=  membership.active_flag.humanize %></td>
										<td><%= link_to 'Edit', edit_membership_path(membership), class: "btn btn-primary btn-sm"%></td>
									</tr>
								<% end %>
							</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>			
</div>