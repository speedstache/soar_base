<%= form_with(model: @permission, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
  <div class="form-group row p-2" >
      <%= f.label :username, class: "col col-form-label text-light" %>
    <div class="col">
      <%= @permission.user.username %>
    </div>
  </div>
  <div class="form-group row p-2" >
      <%= f.label :email, class: "col col-form-label text-light" %>
    <div class="col">
      <%= @permission.user.email %>
    </div>
  </div>	
  <div class="form-group row p-2" >
      <%= f.label :user_admin, class: "col col-form-label text-light" %>
    <div class="col">
      <%= f.check_box :user_admin %>
    </div>
  </div>
  <div class="form-group row p-2" >
      <%= f.label :club_admin, class: "col col-form-label text-light" %>
    <div class="col">
      <%= f.check_box :club_admin %>
    </div>
  </div>
  <div class="form-group row p-2" >
      <%= f.label :site_admin, class: "col col-form-label text-light" %>
    <div class="col">
      <%= f.check_box :site_admin %>
    </div>
  </div>
  <div class="form-group row p-2" >
      <%= f.label :global_admin, class: "col col-form-label text-light" %>
    <div class="col">
      <%= f.check_box :global_admin %>
    </div>
  </div>
    
<%= f.submit class:"btn btn-outline-light btn-lg col" %>
<% end %>