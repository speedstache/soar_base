<div class="container">
  <div class="row text-center justify-content-center">
		<div class="col col-sm-10 col-md-10">
      <div class="row">
				<div class="col-12 col-md-6">
					<h4>User Permissions</h4>
				</div>
				<div class="col">
					<div class="row">
						<div class="col">
							<%= link_to 'Back to users list', users_path, :class => "btn btn-primary" %>
						</div>
					</div>
					<div class="row my-2">
						<div class="col flickr_pagination">
							<%= will_paginate @users, :container => false %>
						</div>
					</div>
				</div>		
			</div>
			<div class="row">
        <div class="table-responsive">
					<table class="table table-striped">
						<thead>
							<tr>
								<th>Username</th>
								<th>Email</th>
								<th>CFIG</th>
								<th>Tow</th>
								<th>Comm.</th>
								<th>User Admin</th>
								<th>Club Admin</th>
								<th>Site Admin</th>
								<th>Modify	</th>
							</tr>
						</thead>
						<tbody>
							<% @permissions.each do |permission| %>
								<tr>
									<td><small><%= permission.user.username %></small></td>
									<td><small><%= permission.user.email %></small></td>
									<td><span class="badge badge-pill badge-<%= permission.instructor? ? 'success' : 'info' %>"><%= permission.instructor.humanize %></span></td>
									<td><span class="badge badge-pill badge-<%= permission.towpilot? ? 'success' : 'info' %>"><%= permission.towpilot.humanize %></span></td>
									<td><span class="badge badge-pill badge-<%= permission.commercial? ? 'success' : 'info' %>"><%= permission.commercial.humanize %></span></td>
									<td><span class="badge badge-pill badge-<%= permission.user_admin? ? 'success' : 'info' %>"><%= permission.user_admin.humanize %></span></td>
									<td><span class="badge badge-pill badge-<%= permission.club_admin? ? 'success' : 'info' %>"><%= permission.club_admin.humanize %></span></td>
									<td><span class="badge badge-pill badge-<%= permission.site_admin? ? 'success' : 'info' %>"><%= permission.site_admin.humanize %></span></td>
									<td><%= link_to 'Edit', edit_permission_path(permission), class: "btn btn-primary btn-sm"%></td>
								</tr>
							<% end %>
						</tbody>
					</table>
					</div>
				</div>		
			</div>
		</div>	
	</div>
</div>