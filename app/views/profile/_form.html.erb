<%= form_with(model: current_user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
  <div class="form-group row m-3">
    <%= f.label :username, class: "col-4 col-form-label" %>
    <div class="col">
      <%= f.text_field :username, class: "input-group-text form-control" %>
    </div>
  </div>
  <div class="form-group row m-3" >
    <%= f.label :email, class: "col-4 col-form-label" %>
    <div class="col">
      <%= f.text_field :email, class: "input-group-text form-control" %>
    </div>
  </div>
  <%= link_to "Close", profile_path(current_user),  class: "btn btn-light" %>
  <%= f.submit class:"btn btn-primary" %>
<% end %>